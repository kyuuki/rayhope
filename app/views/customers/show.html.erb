<div id="page">
    <div class="container">
      <h1>登録確認画面</h1>
      <%= link_to "編集する", edit_customer_path %>
<%= link_to "削除する", customer_path, method: :delete, data: { confirm: "本当によろしいですか？"} %>
      <div class="row">
        <div class="col-sm-9">
            <div class="form-group">
              <label for="input-name" class="col-sm-2 control-label">お名前</label>
              <div class="col-sm-10">
                <%= @customer.name %>
              </div>
            </div>
            <div class="form-group">
              <label for="input-mail" class="col-sm-2 control-label">郵便番号</label>
              <div class="col-sm-10">
                <%= @customer.zip %>
              </div>
            </div>
            <div class="form-group">
              <label class="col-sm-2 control-label">都道府県</label>
              <div class="col-sm-10">
                <%= @customer.address1 %>
              </div>
            </div>
            <div class="form-group">
              <label class="col-sm-2 control-label">市町村</label>
              <div class="col-sm-10">
                <%= @customer.address2 %>
              </div>
            </div>
        </div>
      </div>
      
<%= link_to "一覧に戻る", customers_path %>
    </div><!-- /container -->
  </div><!-- /page -->









